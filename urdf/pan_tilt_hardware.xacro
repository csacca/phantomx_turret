          <box size="0 0 0"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${name}_link">
      <material>Gazebo/${color}</material>
      <selfCollide>true</selfCollide>
      <gravity>true</gravity>
    </gazebo>

  </xacro:macro>

</robot>
